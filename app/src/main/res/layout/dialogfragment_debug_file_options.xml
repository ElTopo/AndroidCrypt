<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:captionedimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/copyButton"
            captionedimageview:caption="@string/copy"
            captionedimageview:img_src="@drawable/ic_copy"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/moveButton"
            captionedimageview:caption="@string/move"
            captionedimageview:img_src="@drawable/ic_move"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/deleteButton"
            captionedimageview:caption="@string/delete"
            captionedimageview:img_src="@drawable/ic_trash"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/renameButton"
            captionedimageview:caption="@string/rename"
            captionedimageview:img_src="@drawable/ic_cursor"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/encryptButton"
            captionedimageview:caption="@string/encrypt"
            captionedimageview:img_src="@drawable/ic_lock"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/decryptButton"
            captionedimageview:caption="@string/decrypt"
            captionedimageview:img_src="@drawable/ic_unlock"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/addFavoriteButton"
            captionedimageview:caption="@string/add_favorite"
            captionedimageview:img_src="@drawable/ic_star"
            style="@style/FileOptionsCaptionedImageButton"
            />

        <com.dewdrop623.androidaescrypt.FileBrowsing.ui.view.CaptionedImageButton
            android:id="@+id/removeFavoriteButton"
            captionedimageview:caption="@string/remove_favorite"
            captionedimageview:img_src="@drawable/ic_star"
            style="@style/FileOptionsCaptionedImageButton"
            />
    </GridLayout>
</ScrollView>