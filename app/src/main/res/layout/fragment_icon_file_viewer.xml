<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/currentPathTextViewScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:longClickable="false">

        <TextView
            android:id="@+id/currentPathTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:text="/home/nick/Download/CSS2221/Hmwk/Projects/Project4/Resources/XML/asdf/asdf/as/f/as/df/as/f/"
            android:textSize="20sp" />

    </HorizontalScrollView>

    <GridView
        android:id="@+id/fileGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/currentPathTextViewScrollView"
        android:clipToPadding="false"
        android:columnWidth="80dp"
        android:gravity="center"
        android:horizontalSpacing="4dp"
        android:numColumns="auto_fit"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clipToPadding="false"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/cancelMoveCopyButton"
            style="@style/IconFileViewerImageButton"
            android:src="@drawable/ic_cancel" />

        <ImageButton
            android:id="@+id/moveCopyButton"
            style="@style/IconFileViewerImageButton" />

        <ImageButton
            android:id="@+id/selectDirectoryButton"
            style="@style/IconFileViewerImageButton"
            android:src="@drawable/ic_select_folder" />
    </LinearLayout>
</RelativeLayout>
