<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/encryptModeButton"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/operation_mode_button_selector"
                android:text="@string/encrypt"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/decryptModeButton"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/operation_mode_button_selector"
                android:text="@string/decrypt"
                android:textColor="#FFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/missingFilesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="24dp"
            android:text="@string/missing_files_click_here"
            android:textColor="#00F" />

        <LinearLayout
            android:id="@+id/inputContentURILinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.dewdrop623.androidcrypt.FileSelectButton
                android:id="@+id/selectInputFileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:minimized="false"
                app:output_button="false" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/inputContentURITextView"
                    style="@style/ContentURITextView" />
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:id="@+id/inputContentURIUnderlineView"
            style="@style/ContentURIUnderlineView"
            android:layout_marginBottom="28dp" />

        <LinearLayout
            android:id="@+id/outputContentURILinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.dewdrop623.androidcrypt.FileSelectButton
                android:id="@+id/selectOutputFileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:minimized="false"
                app:output_button="true" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/outputContentURITextView"
                    style="@style/ContentURITextView" />
            </HorizontalScrollView>

        </LinearLayout>

        <View
            android:id="@+id/outputContentURIUnderlineView"
            style="@style/ContentURIUnderlineView"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/passwordEditText"
            style="@style/PasswordEditText"
            android:hint="@string/password" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            style="@style/PasswordEditText"
            android:hint="@string/confirm_password" />

        <CheckBox
            android:id="@+id/showPasswordCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/show_password" />

        <LinearLayout
            android:id="@+id/progressDisplayLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/progressDisplayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/progressDisplayProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false" />

            <LinearLayout
                android:id="@+id/progressDisplayCancelButtonLinearLayout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                 >
                <ImageView
                    app:srcCompat="@drawable/ic_cancel"
                    android:tint="@android:color/darker_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>
                <TextView
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>